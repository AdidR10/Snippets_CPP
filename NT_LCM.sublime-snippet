long long GCD(long long a, long long b) {
  if (a == 0) return b;
  if (b == 0) return a;
  if (a < b) swap(a, b);
  return GCD(a % b, b);
}
long long LCM(long long a, long long b) {
	return (a * b) / GCD(a, b);
}
]]></content>
